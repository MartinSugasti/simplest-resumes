<section id="send-intructions-page" class="row g-0 vh-100">
  <div class="left-section col-10 col-sm-4 offset-1 py-4 d-flex align-items-center">
    <div class="w-100">
      <div class="text-center mb-5">
        <%= link_to home_path do %>
          <img src="https://urseseguros.com.uy/content/urse/images/logo_02.png" class="mw-100">
        <% end %>
      </div>

      <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
        <div class="btn-group mb-4 w-100 type" role="group" aria-label="Basic radio toggle button group">
          <%= link_to "Candidate",
                      new_candidate_confirmation_path,
                      class: "type-selector candidate #{resource_name.to_s == 'candidate' ? 'selected text-light' : '' } btn btn-outline-primary-dark border-end-0"
          %>
          <%= link_to "Recruiter",
                      new_recruiter_confirmation_path,
                      class: "type-selector recruiter #{resource_name.to_s == 'recruiter' ? 'selected text-light' : '' } btn btn-outline-primary-dark border-start-0"
          %>
        </div>

        <div class="mb-4">
          <%= f.email_field :email, autocomplete: "off", class: "form-control", placeholder: "Email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
        </div>

        <div class="mt-4 text-center">
          <%= f.submit "Resend Instructions", class: "btn-submit btn btn-primary border-0 shadow w-100 text-light text-wrap px-0" %>
        </div>

        <div class="text-center d-md-flex justify-content-center mt-2">
          <%= link_to "Sign In", new_session_path(resource_name), class: "text-primary-dark" %>
        </div>

        <% if devise_mapping.registerable? %>
          <div class="text-center d-md-flex justify-content-center">
            <%= link_to "Sign Up", new_registration_path(resource_name), class: "text-primary-dark" %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <%= render "devise/shared/right_section" %>
</section>