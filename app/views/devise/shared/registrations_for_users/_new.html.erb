<section class="authentication-page row g-0 vh-100">
  <div class="left-section col-10 col-sm-4 offset-1 py-4 d-flex align-items-center">
    <div class="w-100">
      <div class="text-center mb-5">
        <%= link_to home_path do %>
          <%= image_tag 'logos/primary.png', class: 'mw-100' %>
        <% end %>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
        <div class="btn-group mb-4 w-100 bg-primary rounded-pill" role="group" aria-label="Basic radio toggle button group">
          <%= link_to t('devise.shared.users.candidate'),
                      new_candidate_registration_path,
                      class: "type-selector candidate #{resource_name.to_s == 'candidate' ? 'selected text-light' : 'text-primary-dark border border-1 border-primary-dark'} btn border-end-0 rounded-start-pill"
          %>
          <%= link_to t('devise.shared.users.recruiter'),
                      new_recruiter_registration_path,
                      class: "type-selector recruiter #{resource_name.to_s == 'recruiter' ? 'selected text-light' : 'text-primary-dark border border-1 border-primary-dark'} btn border-start-0 rounded-end-pill"
          %>
        </div>

        <div class="mb-4">
          <%= f.email_field :email, autocomplete: 'off', class: 'form-control rounded-pill bg-light', placeholder: t('devise.shared.email') %>
        </div>

        <div class="mb-4">
          <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control rounded-pill bg-light', placeholder: "#{t('devise.shared.password')} #{t('devise.shared.minimum_password_length', count: @minimum_password_length)}" %>
        </div>

        <div>
          <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control rounded-pill bg-light', placeholder: t('devise.shared.confirm_password') %>
        </div>


        <div class="mt-4 text-center">
          <%= f.submit t('devise.registrations.new.sign_up'), class: 'btn-submit btn btn-primary border-0 shadow mb-1 w-100 text-light rounded-pill' %>

          <% if devise_mapping.confirmable? %>
            <%= link_to t('devise.shared.links.didn_t_receive_confirmation_instructions'), new_confirmation_path(resource_name), class: 'text-decoration-none text-muted' %>
          <% end %>
        </div>

        <div class="text-center d-md-flex justify-content-center mt-4">
          <p class="mb-0 me-2"><%= t('devise.shared.links.already_have_an_account') %></p>

          <%= link_to t('devise.shared.links.sign_in'), new_session_path(resource_name), class: 'text-primary-dark' %>
        </div>
      <% end %>

      <div class="align-items-center my-4 row g-0 mx-0">
        <hr class="col-5 my-0">
        <p class="text-center col-2 my-0"><%= t('devise.shared.or') %></p>
        <hr class="col-5 my-0">
      </div>

      <%= render 'devise/shared/social_media_links' %>
    </div>
  </div>

  <%= render 'devise/shared/right_section' %>
</section>
