<section id="sign-up-page" class="row g-0 vh-100">
  <div class="left-section col-10 col-sm-4 offset-1 py-4 d-flex align-items-center">
    <div class="w-100">
      <div class="text-center mb-5">
        <%= link_to home_path do %>
          <img src="https://urseseguros.com.uy/content/urse/images/logo_02.png" class="mw-100">
        <% end %>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="btn-group mb-4 w-100 type" role="group" aria-label="Basic radio toggle button group">
          <%= link_to "Candidate",
                      new_candidate_registration_path,
                      class: "type-selector candidate #{resource_name.to_s == 'candidate' ? 'selected text-light' : '' } btn btn-outline-primary-dark border-end-0"
          %>
          <%= link_to "Recruiter",
                      new_recruiter_registration_path,
                      class: "type-selector recruiter #{resource_name.to_s == 'recruiter' ? 'selected text-light' : '' } btn btn-outline-primary-dark border-start-0"
          %>
        </div>

        <div class="mb-4">
          <%= f.email_field :email, autocomplete: "off", class: "form-control", placeholder: "Email" %>
        </div>

        <div class="mb-4">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password #{@minimum_password_length ? "(#{@minimum_password_length}" : ''} characters minimum)" %>
        </div>

        <div>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Password confirmation" %>
        </div>


        <div class="mt-4 text-center">
          <%= f.submit "Sign Up", class: "btn-submit btn btn-primary border-0 shadow mb-1 w-100 text-light" %>
        </div>

        <div class="text-center d-md-flex justify-content-center mt-4">
          <p class="mb-0 me-2">Already have an account?</p>

          <%= link_to "Sign In", new_session_path(resource_name), class: "text-primary-dark" %>
        </div>
      <% end %>

      <div class="align-items-center my-4 row g-0 mx-0">
        <hr class="col-5 my-0">
        <p class="text-center col-2 my-0">Or</p>
        <hr class="col-5 my-0">
      </div>

      <div>
        <button class="btn mb-2 w-100 text-light shadow" style="background-color: #dd4b39;" type="submit">
          <i class="bi bi-google me-2"></i>
          Google
        </button>
        <button class="btn mb-2 w-100 text-light shadow" style="background-color: #3b5998;" type="submit">
          <i class="bi bi-facebook me-2"></i>
          Facebook
        </button>
        <button class="btn w-100 text-light shadow" style="background-color: #1DA1F2;" type="submit">
          <i class="bi bi-twitter me-2"></i>
          Twitter
        </button>
      </div>
    </div>
  </div>

  <%= render "devise/shared/right_section" %>
</section>
