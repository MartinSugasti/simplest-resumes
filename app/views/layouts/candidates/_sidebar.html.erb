  <%= link_to edit_candidate_registration_path, class: "sidebar-link text-light px-4 py-2 #{active_sidebar_option?({ 'candidates/registrations' => ['edit'] }) ? "bg-primary-dark" : ''}" do %>
    <i class="bi bi-gear-fill pe-2"></i>
    <%= t('dashboard.settings') %>
  <% end %>
</li>

<li>
  <%= button_to destroy_candidate_session_path, class: "sidebar-link text-light px-4 py-2 bg-transparent border-0", method: :delete do %>
