<div id="main-wrapper">
  <div class="sticky-top">
    <% if candidate_masquerade? || recruiter_masquerade? %>
      <div id="back-masquerade" class="bg-danger py-1 text-center sticky-top">
        <%= link_to "Return to Admin dashboard", back_masquerade_path(current_user), class: "bg-light btn px-2 py-0 text-danger text-decoration-none" %>
      </div>
    <% end %>
  </div>


  <div class="d-flex min-vh-100">
    <%= render "layouts/shared/sidebar_container" %>

    <div class="main w-100">
      <%= render "layouts/shared/navbar", user: current_user %>

      <main class="content px-3 py-2 bg-light">
        <div class="container-fluid">
          <div class="mb-3">
            <%= yield %>
          </div>
        </div>
      </main>

      <%= render "layouts/shared/footer" %>
    </div>
  </div>
</div>