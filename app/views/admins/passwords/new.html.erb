<section id="send-intructions-page" class="row g-0 vh-100">
  <div class="left-section col-10 col-sm-4 offset-1 py-5 d-flex align-items-center">
    <div class="w-100">
      <div class="text-center mb-5">
        <img src="https://urseseguros.com.uy/content/urse/images/logo_02.png" class="mw-100">
      </div>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <div class="mb-4">
          <%= f.email_field :email, autocomplete: "off", class: "form-control", placeholder: "Email" %>
        </div>

        <div class="mt-4 text-center">
          <%= f.submit "Send Instructions", class: "btn-submit btn btn-primary border-0 shadow w-100 text-light text-wrap px-0" %>
        </div>

        <div class="text-center d-md-flex justify-content-center mt-2">
          <%= link_to "Sign In", new_session_path(resource_name), class: "text-primary-dark" %>
        </div>
      <% end %>
    </div>
  </div>

  <%= render "devise/shared/right_section" %>
</section>

