<section class="authentication-page row g-0 vh-100">
  <div class="left-section col-10 col-sm-4 offset-1 py-4 d-flex align-items-center">
    <div class="w-100">
      <div class="text-center mb-5">
        <%= link_to home_path do %>
          <%= image_tag 'logos/primary.png', class: 'mw-100' %>
        <% end %>
      </div>

      <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }, data: { turbo: false }) do |f| %>
        <%= f.hidden_field :invitation_token, readonly: true %>

        <div class="mb-4">
          <%= f.password_field :password,
                               autocomplete: 'new-password',
                               class: 'form-control rounded-pill bg-light',
                               placeholder: "#{t('devise.passwords.edit.new_password')} #{t('devise.shared.minimum_password_length', count: @minimum_password_length)}"
          %>
        </div>

        <div>
          <%= f.password_field :password_confirmation,
                               autocomplete: 'new-password',
                               class: 'form-control rounded-pill bg-light',
                               placeholder: t('devise.shared.confirm_password')
          %>
        </div>

        <div class="mt-4 text-center">
          <%= f.submit t('devise.invitations.edit.submit'), class: 'btn-submit btn btn-primary border-0 shadow w-100 text-light rounded-pill' %>
        </div>
      <% end %>
    </div>
  </div>

  <%= render 'devise/shared/right_section' %>
</section>
