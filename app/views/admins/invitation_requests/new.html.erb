<section class="authentication-page row g-0 vh-100">
  <div class="left-section col-10 col-sm-4 offset-1 py-4 d-flex align-items-center">
    <div class="w-100">
      <div class="text-center mb-5">
        <%= link_to home_path do %>
          <%= image_tag 'logos/primary.png', class: 'mw-100' %>
        <% end %>
      </div>

      <%= form_with(model: [:admins, @invitation_request], data: { turbo: false }) do |f| %>
        <div class="mb-4">
          <%= f.email_field :email, autocomplete: "off", class: "form-control rounded-pill bg-light", placeholder: "Email" %>
        </div>

        <div class="mt-4 text-center">
          <%= f.submit "Send Request", class: "btn-submit btn btn-primary border-0 shadow w-100 text-light text-wrap px-0 rounded-pill" %>
        </div>

        <div class="text-center d-md-flex justify-content-center mt-2">
          <%= link_to "Sign In", new_admin_session_path, class: "text-primary-dark" %>
        </div>
      <% end %>
    </div>
  </div>

  <%= render "devise/shared/right_section" %>
</section>

